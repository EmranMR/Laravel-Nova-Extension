<completions>
    <!-- !keyword -->
    <set name="blade.keywords" symbol="constant" case-insensitive="true">
        <completion string="@csrf"/>
        <completion string="@parent"/>
        <completion string="@viteReactRefresh"/>
        <completion string="@inertia"/>
        <completion string="@inertiaHead"/>
        <completion string="@routes"/>
        <completion string="@livewireStyles"/>
        <completion string="@livewireScripts"/>
        <completion string="@livewireScriptConfig"/>
    </set>
    <!-- !loop_operator -->
    <set name="blade.loop.keywords"  case-insensitive="true">
        <completion symbol="constant" string="@break"/>
        <completion symbol="constant" string="@continue"/>
        <completion symbol="function" string="@continue">
            <behavior>
                <append>($[])</append>
            </behavior>
        </completion>
        <completion symbol="function" string="@break">
            <behavior>
                <append>($[])</append>
            </behavior>
        </completion>
    </set>
    <!-- !conditional_keyword -->
    <set name="blade.conditional.keywords">
        <completion symbol="constant" string="@else"/>
        <completion symbol="function" string="@elseif">
            <behavior prefix="@">
                <append>($[])</append>
            </behavior>
        </completion>
    </set>

    <!-- !switch_keyword -->
    <set name="blade.switch.keywords">
        <!-- uncomment once the <query> bug is fixed by panic -->
        <!-- <completion symbol="constant" string="@break"/> -->
        <completion symbol="constant" string="@default"/>
        <completion symbol="function" string="@case">
            <behavior prefix="@">
                <append>($[])</append>
            </behavior>
        </completion>
    </set>

    <!-- !authorization keywords -->
    <set name="blade.authorization.keywords">
        <behavior prefix="@">
            <append>($[])</append>
        </behavior>
        <completion symbol="function" string="@elsecan"/>
        <completion symbol="function" string="@elsecannot"/>
        <completion symbol="function" string="@elsecanany"/>
    </set>
    <!-- !pennant keywords -->
    <set name="blade.pennant.keywords">
        <behavior prefix="@">
            <append>($[])</append>
        </behavior>
        <completion symbol="function" string="@elsefeature"/>
    </set>

</completions>