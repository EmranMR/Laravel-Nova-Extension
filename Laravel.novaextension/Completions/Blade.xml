<?xml version="1.0" encoding="UTF-8"?>

<completions name="Blade">
    <!-- !General/Universal completion set -->
    <provider name="blade.general">
        <syntax>Blade</syntax>
        <syntax>html</syntax>
        <expression>@[a-zA-Z0-9-]*</expression>
        <trigger>@</trigger>
        <exclude-selector>comment, attribute</exclude-selector>
        <set>blade.php.statement</set>
        <set>blade.inline.directive</set>
        <set>blade.keywords</set>
        <set>blade.nested.directive</set>
    </provider>
    <!-- ! attributes.xml -->
    <provider name="blade.attributes">
        <syntax>Blade</syntax>
        <syntax>html</syntax>
        <expression>@[a-zA-Z0-9-]*</expression>
        <trigger>@</trigger>
        <query>
            (attribute)
        </query>
        <set>blade.attributes</set>
    </provider>
    <!-- !conditional keywords -->
    <provider name="blade.conditional.keywords">
        <syntax>Blade</syntax>
        <syntax>html</syntax>
        <expression>@[a-zA-Z0-9-]*</expression>
        <exclude-selector>comment, attribute</exclude-selector>
        <trigger>@</trigger>
        <query>
            (conditional)
        </query>
        <set>blade.conditional.keywords</set>
    </provider>
    <!-- !switch keywords -->
    <provider name="blade.switch.keywords">
        <syntax>Blade</syntax>
        <syntax>html</syntax>
        <expression>@[a-zA-Z0-9-]*</expression>
        <exclude-selector>comment, attribute</exclude-selector>
        <trigger>@</trigger>
        <query>
            (switch)
        </query>
        <set>blade.switch.keywords</set>
    </provider>
</completions>
