<completions>
    <set name="blade.nested.directive" case-insensitive="true">
        <!-- !section -->
        <completion string="@section" symbol="block">
            <behavior>
                <append>($[parameter])&#10;&#9;$[body]&#10;@endsection</append>
            </behavior>
        </completion>
        <!-- !fragment -->
        <completion string="@fragment" symbol="block">
            <behavior>
                <append>($[parameter])&#10;&#9;$[body]&#10;@endfragment</append>
            </behavior>
        </completion>
        <!-- !once -->
        <completion string="@once" symbol="block">
            <behavior>
                <append>&#10;&#9;$[]&#10;@endonce</append>
            </behavior>
        </completion>
        <!-- !verbatim -->
        <completion string="@verbatim" symbol="block">
